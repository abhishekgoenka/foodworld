@page "{restaurantId:int?}"
@model FoodWorld.Web.Pages.Foods.ListModel
@{ ViewData["Title"] = "Food Menu"; }

<h1>Restaurant Menu</h1>

<div class="row">
    <div class="col">
        @foreach (var food in Model.Foods)
        {
            <div class="card">
                <div class="card-body">
                    <h3 class="card-title">@food.Name</h3>
                    <span>@food.Description</span><br />
                    <span>Price: $@food.Price</span>
                </div>
                <div class="card-footer">
                    <a class="btn btn-lg"
                       asp-page="../Restaurants/List">
                        <i class="fa fa-backward"></i>
                    </a>
                </div>

            </div>
        }
    </div>
</div>
